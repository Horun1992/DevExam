<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
>
    <data>
        <variable name="item"
                  type="test.shuhrat.devexam.data.pojos.ItemModel"/>
    </data>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
    >

        <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:theme="@style/AppBarStyle"
                android:minHeight="?attr/actionBarSize"
                android:id="@+id/activity_detail_toolbar"/>
        <ImageView
                android:layout_margin="@dimen/activity_detail_image_margin"
                android:layout_width="@dimen/activity_detail_image_size"
                android:layout_height="@dimen/activity_detail_image_size"
                app:setImageUrl="@{item.image}"
        />
        <TextView
                android:text="@{item.title}"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/activity_detail_title_marginStart"
                android:layout_marginEnd="@dimen/activity_detail_title_marginEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_detail_title_marginStart"
                android:layout_marginRight="@dimen/activity_detail_title_marginEnd"/>
        <TextView
                android:text="@{item.text}"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/activity_detail_desc_marginStart"
                android:layout_marginEnd="@dimen/activity_detail_desc_marginEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_detail_desc_marginStart"
                android:layout_marginRight="@dimen/activity_detail_desc_marginEnd"/>
    </LinearLayout>
</layout>